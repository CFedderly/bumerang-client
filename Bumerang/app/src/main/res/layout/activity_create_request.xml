<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_create_request"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.seng480b.bumerang.CreateRequest">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <TextView
            android:text="Create Request"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView7"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textSize="24sp" />

        <TextView
            android:text="Title:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/labelTitle"
            android:layout_marginTop="11dp"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:layout_below="@+id/textView7"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="Description:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView9"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:layout_below="@+id/inputTitle"
            android:layout_alignParentStart="true"
            android:layout_alignEnd="@+id/labelDistanceNum" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/inputTitle"
            android:hint="Write what you are looking for here!"
            android:layout_below="@+id/labelTitle"
            android:layout_alignParentStart="true"
            android:textSize="14sp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/inputDescription"
            android:hint="Include a brief description about your item"
            android:layout_below="@+id/textView9"
            android:layout_alignParentStart="true"
            android:textSize="14sp" />

        <TextView
            android:text="Duration:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/labelDuration"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:layout_alignEnd="@+id/textView12"
            android:layout_below="@+id/inputDescription" />

        <EditText
            android:layout_width="56dp"
            android:layout_height="wrap_content"
            android:inputType="time"
            android:ems="10"
            android:id="@+id/inputHours"
            android:layout_below="@+id/labelDuration"
            android:layout_toStartOf="@+id/labelHours" />

        <TextView
            android:text="Hours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView8"
            android:layout_alignBottom="@+id/inputHours"
            android:layout_toEndOf="@+id/inputHours"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:layout_below="@+id/labelDuration"
            android:gravity="center"
            android:layout_centerHorizontal="false"
            android:layout_centerVertical="false" />

        <EditText
            android:layout_width="54dp"
            android:layout_height="wrap_content"
            android:inputType="time"
            android:ems="10"
            android:id="@+id/inputMinutes"
            android:layout_alignBottom="@+id/textView8"
            android:layout_toEndOf="@+id/textView8" />

        <TextView
            android:text="Minutes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/labelMins"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:gravity="center"
            android:layout_alignBottom="@+id/inputMinutes"
            android:layout_toEndOf="@+id/inputMinutes"
            android:layout_alignTop="@+id/inputMinutes" />

        <TextView
            android:text="Distance:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView12"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:layout_below="@+id/inputHours"
            android:layout_alignParentStart="true"
            android:layout_marginTop="22dp" />

        <TextView
            android:text="Tags:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/labelTags"
            android:layout_marginTop="30dp"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:layout_below="@+id/barDistance"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/labelDistanceNum"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:gravity="bottom"
            android:layout_above="@+id/barDistance"
            android:layout_toEndOf="@+id/textView8" />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spinnerDistance"
            android:layout_above="@+id/barDistance"
            android:layout_toEndOf="@+id/inputMinutes" />

        <Button
            android:text="Cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonCancel"
            android:elevation="8dp"
            android:backgroundTint="@android:color/holo_red_dark"
            android:clickable="true"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/labelTags" />

        <Button
            android:text="Create"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonCreate"
            android:elevation="8dp"
            android:backgroundTint="@android:color/holo_green_light"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/labelMins" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/inputTags"
            android:layout_below="@+id/labelTags"
            android:layout_alignParentStart="true" />

        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/barDistance"
            android:max="50"
            android:progress="5"
            android:layout_marginTop="32dp"
            android:layout_below="@+id/textView12"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

</RelativeLayout>
