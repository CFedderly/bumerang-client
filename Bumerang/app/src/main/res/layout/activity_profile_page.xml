<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_profile_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.seng480b.bumerang.ProfilePage">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Daniel Templeman"
        android:textSize="24sp"
        android:id="@+id/profileName"
        android:textAlignment="textStart"
        android:layout_below="@+id/profilePicture"
        android:layout_alignParentStart="true"
        android:layout_marginTop="11dp" />

    <View
        android:id="@+id/profileLine1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_below="@+id/profileName"
        android:layout_alignParentStart="true" />

    <View
        android:id="@+id/profileBioBox"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/textboxBackground"
        android:layout_below="@+id/labelProfileBio"
        android:layout_alignParentStart="true" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bio:"
        android:textSize="18sp"
        android:id="@+id/labelProfileBio"
        android:layout_below="@+id/profileLine1"
        android:layout_alignParentStart="true" />

    <View
        android:id="@+id/profileLine2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_below="@+id/labelProfileBio"
        android:layout_alignParentStart="true"
        android:layout_marginTop="106dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tags:"
        android:textSize="18sp"
        android:id="@+id/labelProfileTags"
        android:layout_below="@+id/profileLine2"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="bio goes here, blah balh balh"
        android:layout_below="@+id/labelProfileBio"
        android:layout_alignParentStart="true"
        android:textAlignment="center" />

    <View
        android:id="@+id/profileTagsBox"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/textboxBackground"
        android:layout_below="@+id/labelProfileTags"
        android:layout_alignParentStart="true" />

    <ImageView
        app:srcCompat="@drawable/com_facebook_profile_picture_blank_portrait"
        android:layout_width="150dp"
        android:layout_height="175dp"
        android:cropToPadding="false"
        android:id="@+id/profilePicture"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/labelProfileBio" />


</RelativeLayout>
